{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,
    "outDir": "dist",
    "allowJs": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "workspaces/server/src/api/responsiveVoiceAPI.js", "workspaces/ui/main.tsx", "workspaces/ui/tsconfig.json", "workspaces/server/index.ts", "workspaces/vite-env.d.ts", "workspaces/ui/App.tsx", "workspaces/ui/src", "workspaces/server/src/dialogue", "workspaces/server/src/handlers", "workspaces/server/src/models"],
  "exclude": [],
  "references": [{ "path": "./tsconfig.node.json" }]
}
